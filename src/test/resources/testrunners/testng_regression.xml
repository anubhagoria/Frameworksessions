<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Opencart App Test Regression Suite" verbose="4" 
		parallel="tests" thread-count="3">

	<test name="Login Page Test_chrome">
		<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test>
	<test name="Login Page Test_edge">
		<parameter name="browser" value="edge"></parameter>
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test>
	<test name="Login Page Test_firefox">
		<parameter name="browser" value="firefox"></parameter>
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test>

	<test name="Accounts Page Test">
		<parameter name="browser" value="firefox"></parameter>
		<classes>
			<class name="com.qa.opencart.tests.AccountsPageTest" />
		</classes>
	</test>

	<test name="Search Page Test">
		<parameter name="browser" value="edge"></parameter>
		<classes>
			<class name="com.qa.opencart.tests.SearchPageTest" />
		</classes>
	</test>


